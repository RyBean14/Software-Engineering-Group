@model SensoreApp.Models.Report

@{
    ViewData["Title"] = "Report a Problem";
}

<div class="container d-flex flex-column align-items-center mt-5">

    <h1 class="fw-bold mb-5" style="font-size:48px;">Report a Problem</h1>

    <div class="card shadow-sm p-4" style="width: 380px; border-radius: 12px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="userID" class="form-label fw-semibold"></label>
                <input asp-for="userID" class="form-control" placeholder="Value" />
                <span asp-validation-for="userID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="reportInfo" class="form-label fw-semibold"></label>
                <input asp-for="reportInfo" class="form-control" placeholder="Value" />
                <span asp-validation-for="reportInfo" class="text-danger"></span>
            </div>

            <button type="submit"
                    class="btn w-100 text-white"
                    style="background:#2c2c2c; height:45px; border-radius:8px;">
                Submit
            </button>
        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
